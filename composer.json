    "require": {
        "php" : ">=8.0.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.5.20",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "TelegramBot\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TelegramBot\\Api\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "codestyle-check": "php-cs-fixer fix --dry-run"
    }
