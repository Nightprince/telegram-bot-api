{
    "name": "luzrain/telegram-bot-api",
    "description": "PHP Wrapper for Telegram Bot API",
    "keywords": [
        "telegram",
        "bot",
        "bot api",
        "telegram bot api",
        "telegram bot"
    ],
    "homepage": "https://github.com/luzrain/TelegramBotApi",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Zenkov",
            "email": "anton.z@live.com",
            "homepage": "https://github.com/luzrain",
            "role": "Developer"
        },
        {
            "name": "Ilya Gusev",
            "email": "mail@igusev.ru",
            "homepage": "https://php-cat.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.2",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit" : "^10.2",
        "friendsofphp/php-cs-fixer": "^3.18",
        "vimeo/psalm": "^5.12"
    },
    "autoload": {
        "psr-4": {
            "Luzrain\\TelegramBotApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luzrain\\TelegramBotApi\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "php-cs": "php-cs-fixer fix -v --dry-run",
        "psalm": "psalm --no-cache"
    }
}
